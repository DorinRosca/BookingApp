@using CarBookingApp.ViewModels

@model IEnumerable<CarBookingApp.ViewModels.DriveViewModel>

<div class="container-lg">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8">
                        <h2>Drive <b>Details</b></h2>
                    </div>
                    <div class="col-sm-4">
                         <a href="@Url.Action("Create")" class="btn btn-info add-new">
                              <i class="fa fa-plus"></i> Add New
                         </a>
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                         @foreach (var drive in Model)
                         {
                              <tr>
                                  <td>@drive.DriveName</td>
                                   <td>
                                        <div class="d-flex align-items-center">
                                             <button class="edit mr-2" title="Edit" data-toggle="tooltip"
                                                     onclick="location.href='/Drive/Edit/@drive.DriveId'">
                                                  <i class="material-icons">&#xE254;</i>
                                             </button>
                                             <form method="post" action="@Url.Action("Delete", new { id = drive.DriveId })" style="display: inline;">
                                                  @Html.AntiForgeryToken()
                                                  <button class="btn btn-delete" type="submit" title="Delete" data-toggle="tooltip">
                                                       <i class="material-icons">&#xE872;</i>
                                                  </button>
                                             </form>
                                        </div>

                                   </td>
                              </tr>
                         }
                </tbody>
            </table>
        </div>
    </div>
</div>