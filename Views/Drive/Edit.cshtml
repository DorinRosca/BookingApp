@using CarBookingApp.ViewModels
@model DriveViewModel

@using (Html.BeginForm("Edit", "Drive", FormMethod.Post))
{
     @Html.HiddenFor(model => model.DriveId)

     <div class="form-group">
          <label for="DriveName">Drive Name</label>
          <input type="text" class="form-control" id="DriveName" name="DriveName" value="@Model.DriveName">
     </div>

     <button type="submit" class="btn btn-primary">Update</button>
}