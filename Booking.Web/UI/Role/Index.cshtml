@model IEnumerable<RoleModel>

<div class="container-lg">
     <div class="table-responsive">
          <div class="table-wrapper">
               <div class="table-title">
                    <div class="row">
                         <div class="col-sm-8">
                              <h2>Role <b>Details</b></h2>
                         </div>
                         <div class="col-sm-4">
                              <a href="@Url.Action("Create", "Role")" class="btn btn-info add-new">
                                   <i class="fa fa-plus"></i> Add New
                              </a>
                         </div>
                    </div>
               </div>
               <table class="table table-bordered">
                    <thead>
                         <tr>
                              <th>Name</th>
                              <th>Actions</th>
                         </tr>
                    </thead>
                    <tbody>
                         @foreach (var role in Model)
                         {
                              <tr>
                                   <td>@role.Name</td>
                                   <td>
                                        <div class="d-flex align-items-center">
                                             <form method="get" action="@Url.Action("Update", "Role")" style="display: inline;">
                                                  <input type="hidden" name="roleId" value="@role.Id">
                                                  <button class="update" title="EditRole" data-toggle="tooltip">Update
                                                  </button>
                                             </form>
                                             <form method="post" action="@Url.Action("Delete", "Role")" style="display: inline;">
                                                  <input type="hidden" name="roleId" value="@role.Id">
                                                  <button class="delete" type="submit" title="Delete" data-toggle="tooltip">Delete
                                                  </button>
                                             </form>
                                        </div>
                                   </td>
                              </tr>
                         }
                    </tbody>
               </table>
          </div>
     </div>
</div>
