@model SetUserRoleResponse
@if (Model is not null && Model.Success == false)
{
          <h3>@Model.BaseMessage</h3>

     @if (Model.ValidationErrors != null && Model.ValidationErrors.Any())
     {
          @foreach (var e in Model.ValidationErrors)
          {
                              <p class="text-danger m-0 my-1">@e</p>
          }
     }
}

@if (Model is not null && Model.Success)
{
          <div class="alert alert-success">
               The Role to user was added successfully
          </div>
}
<div class="container mt-5">
     <div class="row justify-content-center">
          <div class="col-lg-6">
               <div class="card shadow">
                    <div class="card-body p-4">
                         <div class="text-center mb-4">
                              <h2 class="text-primary display-5 fw-bold">Add User-Role Relation:</h2>
                         </div>
                         <form method="post" action="@Url.Action("AddRole", "User")">
                              @Html.AntiForgeryToken()

                              <div class="mb-3">
                                   <label for="UserName">User </label>

                                   <input type="text" class="form-control" id="UserName" name="UserName">
                              </div>
                              <div class="mb-3">
                                   <label for="RoleName">Role</label>

                                   <input type="text" class="form-control" id="RoleName" name="RoleName">
                              </div>
                              <button type="submit" class="btn btn-primary">Create Relation</button>
                         </form>
                    </div>
               </div>
          </div>
     </div>
</div>