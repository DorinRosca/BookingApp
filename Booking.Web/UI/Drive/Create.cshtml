@model AddDriveResponse

@if (Model != null)
{
     @if (Model.Success)
     {
          <div class="alert alert-success">
               The Drive was added successfully
          </div>
     }
     else
     {
          <h3>@Model.BaseMessage</h3>

          @if (Model.ValidationErrors != null && Model.ValidationErrors.Any())
          {
               <div class="alert alert-danger">
                    <ul>
                         @foreach (var error in Model.ValidationErrors)
                         {
                              <li>@error</li>
                         }
                    </ul>
               </div>
          }
     }
}

<form method="post" action="@Url.Action("Create", "Drive")">
     @Html.AntiForgeryToken()

     <div class="form-group">
          <label for="DriveName">Drive Name</label>
          <input type="text" class="form-control" id="DriveName" style="width: 50%;" name="DriveName">
     </div>


     <button type="submit" class="btn btn-primary">Create</button>
</form>