@{
     Layout = "~/Features/Shared/_Layout.cshtml";
}

@model CarBookingApp.Features.Users.ViewModel.UserRoleViewModel

<div class="container mt-5">
     <div class="row justify-content-center">
          <div class="col-lg-6">
               <div class="card shadow">
                    <div class="card-body p-4">
                         <div class="text-center mb-4">
                              <h2 class="text-primary display-5 fw-bold">Add User-Role Relation:</h2>
                         </div>
                         <form method="post" action="@Url.Action("AddRole", "User")">
                              @Html.AntiForgeryToken()

                              <div class="mb-3">
                                   <label asp-for="UserName" class="form-label">UserName:</label>
                                   <span class="text-danger">@Html.ValidationMessageFor(model => model.UserName)</span>
                                   <input type="text" class="form-control" id="UserName" name="UserName">
                              </div>
                              <div class="mb-3">
                                   <label asp-for="RoleName" class="form-label">RoleName:</label>
                                   <span class="text-danger">@Html.ValidationMessageFor(model => model.RoleName)</span>
                                   <input type="text" class="form-control" id="RoleName" name="RoleName">
                              </div>
                              <button type="submit" class="btn btn-primary">Create Relation</button>
                         </form>
                    </div>
               </div>
          </div>
     </div>
</div>